{% extends 'admin.html.twig' %}

{% block title %}Liste des Résultats{% endblock %}

{% block body %}
    {% if notes is not empty %}
    <h1 class="h3 mb-3">Résultats</h1>
        <div class="card mb-3 col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Discipline</th>
                        <th>Note</th>
                        <th>Coefficient</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for note in notes %}
                        <tr>
                            <td>{{ note.user.useridentifier }}</td>
                            {% if note.matiere is not null %}
                                <td>{{ note.evaluation.discipline.name }}</td>
                            {% else %}
                                <td>Discipline supprimer ou inexistante</td>
                            {% endif %}
                            <td>{{ note.note }}</td>
                            <td>{{ note.evaluation.coefficient }}</td>
                            <td>{{ note.evaluation.start|date("d M Y") }}</td>
                            <td>
                                <a href="" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <a href="" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    {% else %}
    <h1 class="h3 mb-3">Résultats</h1>
    <div class="card mb-3 col-md-8">
    Aucune note pour le moment
    </div
    {% endif %}

{% endblock %}
